@model htmlHelpersFormulario.Models.Persona

@{
    List<SelectListItem> EdadesPermitidas = new List<SelectListItem>();
    int EdadMinima = 10;
    while (EdadesPermitidas.Count() < 50)
    {
        EdadesPermitidas.Add(new SelectListItem((EdadesPermitidas.Count() + EdadMinima) + " Años", (EdadesPermitidas.Count() + EdadMinima).ToString()));

    }
}
<br />
<br />
@using (Html.BeginForm())
{


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h3 class="text-success">Registro</h3>


                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Nombre, new { @class = "control-label" }) </b>
                    @Html.TextBoxFor(x => Model.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <b>    @Html.LabelFor(x => Model.Edad, new { @class = "control-label" })  </b>
                    @Html.DropDownListFor(x => Model.Edad, EdadesPermitidas, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <b>   @Html.LabelFor(x => Model.Tel, new { @class = "control-label" }) </b>
                    @Html.TextBoxFor(x => Model.Tel, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <b>@Html.LabelFor(x => Model.Genero, new { @class = "control-label" })</b>
                    @Html.DropDownList("Genero", new List<SelectListItem>{
                        new SelectListItem{Text="Masculino", Value = "Masculino"},
                         new SelectListItem{Text="Femina", Value = "femina"},
                        new SelectListItem{Text="Otros", Value = "otros"}},
                        " Seleccionar Género ", new { @class = "form-control" })
                </div>
                
                <h3 class="text-success">Estado Civil</h3>

                <div class="form-group">
                   
                    Casado
                    @Html.RadioButtonFor(model => model.Estado, "Casado")
                    <br />
                    Soltero
                    @Html.RadioButtonFor(model => model.Estado, "Soltero")
                    <br />
                    Viudo
                    @Html.RadioButtonFor(model => model.Estado, "Viudo")
                    <br />
                    Union Libre
                    @Html.RadioButtonFor(model => model.Estado, "Union Libre")
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <input type="submit" class="btn btn-success btn-block" value="Registrar">
            </div>
        </div>
    </div>

    <div class="col-lg-6">

        <h3 class="text-success">Registro</h3>
        <div class="form-group">
            <b>  @Html.LabelFor(x => Model.Apellido, new { @class = "control-label" })</b>
            @Html.TextBoxFor(x => Model.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(x => Model.Cedula, new { @class = "control-label" })</b>
            @Html.TextBoxFor(x => Model.Cedula, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <b>  @Html.LabelFor(x => Model.Email, new { @class = "control-label" })</b>
            @Html.TextBoxFor(x => Model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <h3 class="text-primary">Pasatiempo</h3>
        <div class="form-group">
            @Html.CheckBox("TiempoLibre[]", false, new { @value = "Jugar" })
            Programar *
            @Html.CheckBox("TiempoLibre[]", false, new { @value = "Viajar" })
            Leer *
            @Html.CheckBox("TiempoLibre[]", false, new { @value = "Leer" })
            Comer *
            @Html.CheckBox("TiempoLibre[]", false, new { @value = "Vivir" })
            Dormir
        </div>

    </div>
</div>
}

